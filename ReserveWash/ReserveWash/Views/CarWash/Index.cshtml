@model IEnumerable<ReserveWash.ViewModels.Product.CarWashViewModel>

@{
    ViewData["Title"] = "لیست کارواش‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>لیست کارواش‌ها</h1>

    <p>
        <a class="btn bg-gradient-success" asp-action="Create">ایجاد کارواش جدید</a>
    </p>
    
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    تاریخ تاسیس
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">حذف</a> |
                    <a class="btn btn-success btn-sm" asp-controller="Service" asp-action="Index" asp-route-id="@item.Id">خدمت ها</a> |
                    <a class="btn btn-primary btn-sm" asp-controller="Reservation" asp-action="Index" asp-route-id="@item.Id">نوبت ها</a> 
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
