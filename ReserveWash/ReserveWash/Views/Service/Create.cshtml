@model ReserveWash.ViewModels.Product.CarWashServiceViewModel

@{
    ViewData["Title"] = "سرویس جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>تنظیم نوبت جدید</h1>

    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CarwashId" value="@ViewBag.Id"/>
                <input type="hidden" asp-for="Id" value=0/>
                <h1 value="@ViewBag.CarwashName"/>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control col-md-2 border rounded" placeholder="نام خدمت را وارد کنید" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
               <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" class="form-control col-md-2 border rounded" placeholder="تومان" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" id="formsubmitbtn" value="ایجاد" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-secondary mt-3" asp-action="Index">بازگشت به لیست</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
